%h2 Sign up
= form_for(@user, url: user_registration_path) do |f|
  = render "devise/shared/error_messages", resource: @user
  .field
    = f.label :nickname
    　＊必須
    %br/
    = f.text_field :nickname
  .field
    = f.label :first_name
    　＊必須
    %br/
    = f.text_field :first_name
  .field
    = f.label :family_name
    　＊必須
    %br/
    = f.text_field :family_name
  .field
    = f.label :first_name_kana
    　＊必須
    %br/
    = f.text_field :first_name_kana
  .field
    = f.label :family_name_kana
    　＊必須
    %br/
    = f.text_field :family_name_kana
  .field
    = f.label :birthday
    　＊必須
    %br/
    = raw sprintf(f.date_select(:birth_day, autofocus: true, prompt:"--",use_month_numbers: true, start_year:Time.now.year,end_year:(1900),date_separator:'%s'), '年 ', '月 ') + '日' 
    -# = f.text_field :birth_day
  .field
    = f.label :email
    　＊必須
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email"
  .field
    = f.label :password
    　＊必須
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password"
  .field
    = f.label :password_confirmation
    　＊必須
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password"
  .field
    = f.label :introduction
    %br/
    = f.text_field :introduction
  .actions
    = f.submit "Next"
= render "devise/shared/links"